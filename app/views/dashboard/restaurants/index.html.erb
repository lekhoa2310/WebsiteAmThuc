
<div class="container">
  <h1 class="text-center text-danger margin_bottom_10">Danh sách cửa hàng của bạn</h1>
  <a href="<%= new_dashboard_restaurant_path%>" class = " btn btn-primary margin_bottom_10">Tạo cửa hàng</a>

  <table class="table table-hover table-bordered" >
    <tr style="background: pink">
      <th>STT</th>
      <th>Tên cửa hàng</th>
      <th>Số điện thoại</th>
      <th>Địa chỉ</th>
      <th>Ngày tạo</th>
      <th>Chức năng</th>
    </tr>
    <% @restaurants.each_with_index do |restaurant,index| %>
    <tr class="box-restaurants">
      <td><%= index + 1 + (@page-1)*3  %></td>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.phone %></td>
      <td><%= restaurant.address %>, <%= restaurant.district.name %>, <%=restaurant.district.city.name%></td>
      <td><%= restaurant.created_at %></td>
      <td>
        <a href="<%= dashboard_restaurant_foods_path(restaurant) %>"  class="btn btn-primary">Quản lý</a>
        <a href="<%= edit_dashboard_restaurant_path(restaurant) %>"  class="btn btn-warning">Sửa</a>
        <a href ="<%= dashboard_restaurant_path(restaurant) %>" data-method="delete" data-target="<%= restaurant.id %>" class="btn btn-danger delete-restaurant" data-confirm="Bạn chắc chắn muốn xóa?">Xóa</a>
      </td>
    </tr>

    <% end %>
  </table>
  <div class="pagination pull-right">
    <%= will_paginate @restaurants , renderer: BootstrapPagination::Rails %>
  </div>



</div>
