
<% if @restaurant.errors.any? %>
  <div class="col-md-12 alert alert-danger">
    <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message%></li>
    <%end%>
  </div>
<% end %>

<div class="container">
  <h1 class="text-center text-danger">Đăng ký cửa hàng</h1>
  <fieldtest>
  <%= form_for :restaurant, url: dashboard_restaurants_path, method: "post" ,  html: { multipart: true }  do |f| %>
    <div class="col-md-4 col-sm-offset-4">
      <div class="form-group">
        <label for="exampleInputName">Tên cửa hàng</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Tên" , required: "required"%>
      </div>
      <div class="form-group">
        <label for="exampleInputName">Số điện thoại</label>
        <%= f.text_field :phone, class: "form-control", placeholder: "Số điện thoại", required: "required" %>
      </div>
      <div class="form-group city">
        <label for="" >City</label>
        <select name="cities"  class="form-control " id="city_select"  required ="requied" >
              <option value=""></option>
          <% @cities.each do |city| %>
            <option value="<%= city.id %>"><%= city.name%></option>
          <%end%>
        </select>
      </div>
      <div class="form-group">
        <label for="">District</label>
        <select name="restaurant[district_id]" id="district_select" class="form-control" required ="requied"></select>
      </div>
      <div class="form-group">
        <label for="exampleInputName">Địa chỉ</label>
        <%= f.text_field :address, class: "form-control", placeholder: "Địa chỉ", required: "required"%>
      </div>
      <div class="fotrm-group margin_bottom_10">
        <%= f.label "Ảnh cửa hàng"%>
        <%= f.file_field :image , class: "form-control" %>
      </div>

      <div class="text-center"><button type="submit" class="btn btn-primary text-center" name="button">Đăng ký</button><a class=" text-center btn btn-danger margin_left_10" href="<%= dashboard_restaurants_path%>">Hủy</a></div>

    </div>
      <%end%>
      </fieldtest>
  </div>
