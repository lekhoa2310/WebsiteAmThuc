
<div class="container">

<div class="col-md-4 col-sm-offset-4 cart">
  <h1 class="text-center text-danger">Giỏ hàng</h1>
  <div class=" foods-of-order row">
    <%session[:cart][@restaurant.id].each do |f|%>
    <div class="row">
    <div class="food<%=f["id"]%> col-md-12">
      <div class="col-md-4">
        <p><%=f["name"]%></p>
      </div>
      <div class="col-md-4 change-quantity ">
        <p><span data-restaurant="<%=@restaurant.id%> " data-food="<%= f["id"]%>"class="icon-plus glyphicon glyphicon-plus txt-green"></span> <span class="text-strong quantiy "><%=f["quantity"]%></span> <span data-restaurant="<%=@restaurant.id%> " data-food="<%=f["id"]%>" class="icon-minus glyphicon glyphicon-minus"></span></p>
      </div>
      <div class="col-md-4 ">
        <p><%=f["price"]%></p>
      </div>
    </div>
    </div>
    <%end%>
  </div>
  <div class=" row">
    <div class="col-md-6"><p>Phí vận chuyển</p></div>
    <div class="col-md-2 "></div>
    <div class="col-md-4 "><p>10000</p> </div>
  </div>
  <div class="row">
  <div class="col-md-6"><p>Tổng tiền</p></div>
  <div class="col-md-2 "></div>
  <div class="col-md-4 "><p id="total"><%=@total%></p></div>
  </div>

  <fieldtest>
  <form name="cart"   action="<%= cart_restaurant_path(@restaurant) %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <label for="">Số điện thoại</label>
      <input type="text" class="form-control" name="phone" value=" <%= @current_user.phone  %>"placeholder="Số điện thoại" required >
    </div>
    <div class="form-group">
      <label for="">Địa chỉ </label>
      <input type="text" class="form-control" name="address" placeholder="Địa chỉ" value="<%=@current_user.address%>, <%=@current_user.district.name%>, <%=@current_user.district.city.name%>" required >
    </div>
    <button type="submit" class="col-md-12 btn btn-danger margin_bottom_10">Đặt hàng</button>
  </form>
  </fieldtest>

  <a href="<%= restaurant_path(@restaurant)%>" data-method = "get"class="col-md-12 btn btn-primary">Quay lại</a>

</div>
</div>
