
<div class="container">


<!-- CONTRACT -->
<section id="contact" class="col-md-12">
    <div class="col-md-8 col-sm-offset-2" >
      <div class="row">
        <div class="contact-heading text-center col-sm-8 col-sm-offset-2">
          <h1 class="margin_bottom_50">Liên hệ</h1>
          <!-- <p>Liên hệ với chúng tôi để biết thêm thông tin.</p> -->
        </div>
      </div>
      <div >
        <div class="row">
          <div class="col-sm-6">
            <form  class="contact-form" action="<%=create_contact_posts_path%>" method="post">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <div class="row" >
                <div class="col-sm-6">
                  <div class="form-group">
                    <input type="text" name="name" class="form-control" <% if @current_user%> value="<%=@current_user.name%>" <%end%> placeholder="Tên" required="required">
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <input type="email" name="email" class="form-control" <% if @current_user%> value="<%=@current_user.email%>" <%end%>  placeholder="Email" required="required">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <input type="text" name="subject" class="form-control" placeholder="Chủ đề" required="required">
              </div>
              <div class="form-group">
                <textarea name="content" id="content" class="form-control" rows="4" placeholder="Nội dung" required="required"></textarea>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary col-md-12 ">Gửi</button>
              </div>
            </form>
          </div>
          <div class="col-sm-6">
            <div class="contact-info wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
              <p>Liên hệ với chúng tôi để biết thêm thông tin.</p>
              <ul class="contact-address">
                <li> <span> Address:</span>  Ktx DMC 579 - P.Hòa Khánh-Q.Liên Chiểu - TP.Đà Nẵng</li>
                <li><span> Phone:</span> 0989 899 466  </li>
                <li><span> Email:</span><a href="mailto:someone@yoursite.com"> lekhoa2310@gmail.com</a></li>
                <li><span> Website:</span> <a href="#">www.amthuc3mien.com</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<!-- Footer -->
</div>
