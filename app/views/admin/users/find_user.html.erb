
<div class="container">
  <div class="row">
    <div class="col-md-12 row">
      <div class="form-group col-md-4 row">
        <form class="navbar-form" role="search" action="/admin/users/find_user" method="get">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Tên người dùng..." name="user_name">
            <div class="input-group-btn">
              <!-- <i class="glyphicon glyphicon-search"></i> -->
                <button class="btn btn-default" type="submit">Tìm</button>
            </div>
        </div>
        </form>
      </div>
    </div>
  </div>
<div class="list-user">
  <h1 class = "text-center text-danger margin_bottom_50" >Danh sách tìm kiếm tương ứng</h1>


<table class="table table-hover table-bordered" >
  <tr style="background: pink">
    <th>STT</th>
    <th>Email</th>
    <th>Tên</th>
    <th>Số điện thoại</th>
    <th>Sinh nhật</th>
    <th>Địa chỉ</th>
    <th>Chức năng</th>
  </tr>
  <% @users.each_with_index do |user,index| %>
  <tr class="box-user">
    <td><%= index + 1 + (@page-1)*3  %></td>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
    <td><%= user.phone %></td>
    <td><%= user.birthday.strftime("%d/%m/%Y") %></td>
    <td><%= user.address %>, <%= user.district.name %>, <%=user.district.city.name%></td>
    <td>
      <a href="<%= admin_user_path(user)%>" class="btn btn-primary">Xem</a>
      <a href="<%= edit_admin_user_path(user) %>" class="btn btn-warning">Sửa</a>
      <a href ="<%= admin_user_path(user) %>" data-method="delete" data-target="<%= user.id %>" class="btn btn-danger delete-user" data-confirm="Bạn chắc chắn muốn xóa?">Xóa</a>
    </td>
  </tr>

  <% end %>
</table>
<div class="pagination pull-right">
  <%= will_paginate @users , renderer: BootstrapPagination::Rails %>
</div>
</div>
</div>
