
<div class="container">
  <div class="btn-group">
    <a class="btn btn-default " href="<%=admin_restaurants_path%>">Quản lý cửa hàng</a>
    <a href="" class="btn btn-info">Cửa hàng chờ duyệt</a>
  </div>
  <h1 class="text-center text-danger margin_bottom_50">Danh sách cửa hàng chờ duyệt</h1>
  <!-- <a href="<%= new_dashboard_restaurant_path%>" class = " btn btn-primary margin_bottom_10">Tạo cửa hàng</a> -->

  <table class="table table-hover table-bordered" >
    <tr style="background: pink">
      <th>STT</th>
      <th>Tên cửa hàng</th>
      <th>Số điện thoại</th>
      <th>Địa chỉ</th>
      <th>Ngày tạo</th>
      <th>Chức năng</th>
    </tr>
    <% @restaurants.each_with_index do |restaurant,index| %>
    <tr class="box-restaurants">
      <td><%= index + 1 + (@page-1)*3  %></td>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.phone %></td>
      <td><%= restaurant.address %>, <%= restaurant.district.name %>, <%=restaurant.district.city.name%></td>
      <td><%= restaurant.created_at.strftime("%H:%M %d/%m/%Y") %></td>
      <td>
        <a href="<%= admin_restaurant_path(restaurant) %>"  class="btn btn-primary">Xem</a>
        <a href="<%= admin_restaurant_path(restaurant) %> " data-method ="patch"  class="btn btn-warning">Duyệt</a>
      </td>
    </tr>

    <% end %>
  </table>
  <div class="pagination pull-right">
    <%= will_paginate @restaurants , renderer: BootstrapPagination::Rails %>
  </div>



</div>
