
<div class="container">
  <h1 class="text-center">Đăng nhập</h1>
  <div class="col-md-4 col-sm-offset-4">
  <%= form_for :session, url: sign_path, html: {id: "login_form", class: "form-horizontal"} do |f| %>
    <fieldset>
    <div class="form-group ">
      <label for="exampleInputEmail">Email</label>
      <%= f.text_field :email, class: "form-control", placeholder: "Email ", required: "required"%>
    </div>
    <div class="form-group ">
      <label for="exampleInputPassword">Mật khẩu</label>
      <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu", required: "required"%>
    </div>
    <button class="btn btn-primary ">Đăng nhập</button>
     <a href="<%= new_user_path %>">Create a new acount?</a>
  <% end %>
  </fieldset>
  </div>
</div>
